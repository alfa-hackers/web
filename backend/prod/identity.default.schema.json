{
  "$id": "https://example.org/schemas/default",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Default Identity Schema",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "Email",
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "recovery": {
              "via": "email"
            },
            "verification": {
              "via": "email"
            }
          }
        },
        "username": {
          "type": "string",
          "title": "Username"
        }
      },
      "required": ["email"],
      "additionalProperties": false
    }
  }
}
